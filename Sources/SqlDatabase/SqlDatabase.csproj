<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netcoreapp2.2</TargetFrameworks>
	<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <WarningsAsErrors />
    <CodeAnalysisRuleSet>..\StyleCope.ruleset</CodeAnalysisRuleSet>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <StartupObject />
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\SqlDatabase.snk</AssemblyOriginatorKeyFile>
	<!-- NU5125: The 'licenseUrl' element will be deprecated. Consider using the 'license' element instead -->
    <NoWarn>1701;1702;NU5125</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <!-- dotnet pack properties
	     <PackAsTool>true</PackAsTool> is in the build
	-->
    <ToolCommandName>SqlDatabase</ToolCommandName>
	<PackageId>SqlDatabase.GlobalTool</PackageId>

    <Authors>Max Ieremenko</Authors>
    <Company></Company>
    <Product>A command line and PowerShell tool for SQL Server.</Product>
    <Description>SqlDatabase is a tool for SQL Server, allows executing scripts, database migrations and data export.</Description>
    <PackageReleaseNotes>https://github.com/max-ieremenko/SqlDatabase/releases</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/max-ieremenko/SqlDatabase</RepositoryUrl>
    <PackageProjectUrl>https://github.com/max-ieremenko/SqlDatabase</PackageProjectUrl>
    <PackageIconUrl>https://github.com/max-ieremenko/SqlDatabase/raw/master/icon-32.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/max-ieremenko/SqlDatabase/blob/master/LICENSE</PackageLicenseUrl>
    <Copyright>(C) 2018-2019 Max Ieremenko.</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>sqlserver sqlcmd migration-tool c-sharp command-line-tool miration-step sql-script sql-database database-migrations export-data</PackageTags>
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="Configuration\CommandLine.create.txt" />
    <None Remove="Configuration\CommandLine.execute.txt" />
    <None Remove="Configuration\CommandLine.export.txt" />
    <None Remove="Configuration\CommandLine.txt" />
    <None Remove="Configuration\CommandLine.upgrade.txt" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\CommandLine.export.txt" />
    <EmbeddedResource Include="Configuration\CommandLine.execute.txt" />
    <EmbeddedResource Include="Configuration\CommandLine.upgrade.txt" />
    <EmbeddedResource Include="Configuration\CommandLine.create.txt" />
    <EmbeddedResource Include="Configuration\CommandLine.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.IO.Compression" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.2'">
    <PackageReference Include="System.Configuration.ConfigurationManager">
      <Version>4.5.0</Version>
    </PackageReference>
    <PackageReference Include="System.Data.SqlClient" Version="4.6.0" />
  </ItemGroup>

</Project>
