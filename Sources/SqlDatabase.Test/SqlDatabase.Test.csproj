<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netcoreapp2.2;netcoreapp3.1</TargetFrameworks>
    <RootNamespace>SqlDatabase</RootNamespace>
    <NoWarn>NU1702</NoWarn>
    <OutputPath>..\..\bin\Tests</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Scripts\SqlBatchParserTest\Dependencies\Case01.sql" />
    <None Remove="Scripts\SqlBatchParserTest\Dependencies\Case02.sql" />
    <None Remove="Scripts\SqlBatchParserTest\Dependencies\Case03.sql" />
    <None Remove="Scripts\SqlBatchParserTest\Dependencies\Case04.sql" />
    <None Remove="Scripts\SqlBatchParserTest\Dependencies\Case05.sql" />
    <None Remove="Scripts\SqlBatchParserTest\Dependencies\Empty.sql" />
    <None Remove="Scripts\UpgradeScriptSequenceTest\FolderAsModuleName.json" />
    <None Remove="Scripts\UpgradeScriptSequenceTest\OneModule.json" />
    <None Remove="Scripts\UpgradeScriptSequenceTest\ThreeModules.json" />
    <None Remove="Scripts\UpgradeScriptSequenceTest\TwoModules.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\AppConfiguration.default.xml" />
    <EmbeddedResource Include="Configuration\AppConfiguration.full.xml" />
    <EmbeddedResource Include="Configuration\AppConfiguration.empty.xml" />
  </ItemGroup>

  <Target Name="CopyCustomContent" AfterTargets="AfterBuild" Condition="'$(TargetFrameworkIdentifier)' == '.NETCoreApp'">
    <!-- fix configuration for .net core tests
	https://github.com/dotnet/corefx/issues/22101 -->
    <Copy SourceFiles="app.config" DestinationFiles="$(OutDir)\testhost.dll.config" />
  </Target>
  
  <ItemGroup>
    <EmbeddedResource Include="IO\Content.zip" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Dependencies\Case05.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Dependencies\Case04.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Dependencies\Case03.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Dependencies\Case02.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Dependencies\Case01.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Dependencies\Empty.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Go\Case02.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Go\CaseOneLineComment.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Go\CaseStoredProcedure.sql" />
    <EmbeddedResource Include="Scripts\SqlBatchParserTest\Go\Case01.sql" />
    <EmbeddedResource Include="Scripts\UpgradeScriptSequenceTest\ThreeModules.json" />
    <EmbeddedResource Include="Scripts\UpgradeScriptSequenceTest\FolderAsModuleName.json" />
    <EmbeddedResource Include="Scripts\UpgradeScriptSequenceTest\TwoModules.json" />
    <EmbeddedResource Include="Scripts\UpgradeScriptSequenceTest\OneModule.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper.StrongName" Version="1.50.5" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
    <PackageReference Include="Moq" Version="4.13.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" />
    <PackageReference Include="Shouldly" Version="3.0.2" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Examples\CSharpMirationStep\CSharpMirationStep.csproj" />
    <ProjectReference Include="..\SqlDatabase\SqlDatabase.csproj" />
  </ItemGroup>

</Project>
